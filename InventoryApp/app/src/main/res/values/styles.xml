<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Full screen -->
    <style name="AppTheme.FullScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- Card -->
    <style name="AppTheme.Card" parent="Theme.AppCompat.Light">
        <item name="cardCornerRadius">@dimen/dp_2</item>
        <item name="cardElevation">@dimen/dp_2</item>
        <item name="contentPaddingBottom">@dimen/dp_16</item>
        <item name="contentPaddingTop">@dimen/dp_16</item>
        <item name="contentPaddingLeft">@dimen/dp_16</item>
        <item name="contentPaddingRight">@dimen/dp_16</item>
        <item name="cardBackgroundColor">@color/colorWhite</item>
    </style>

</resources>
